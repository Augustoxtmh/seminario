generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Gruero {
  GrueroID          Int         @id @default(autoincrement())
  NombreGruero      String      @unique
  TelefonoGruero    String
  DeAlta            Boolean     @default(true)
  pedidos           PedidoGrua[]
}

model PedidoGrua {
  PedidoID          Int         @id @default(autoincrement())
  UsuarioId         Int
  FechaHoraPedido   DateTime
  NombreCliente     String
  GrueroID          Int         
  Patente           String
  urlFactura        String?
  DeAlta            Boolean     @default(true)
  Monto             Int?
  Gruero            Gruero?     @relation(fields: [GrueroID], references: [GrueroID])
  Usuario           Usuario?     @relation(fields: [UsuarioId], references: [UsuarioId])
}

model Vehiculo {
  Patente           String  @id
  Nombre            String
  Marca             String
  Color             String
  TipoPlan          String
  Modelo            String
  DeAlta            Boolean     @default(true)
  Poliza            Poliza?
  UsuarioId         Int
  Usuario           Usuario?     @relation(fields: [UsuarioId], references: [UsuarioId])
}

model Cuota {
  cuotaId           Int      @id @default(autoincrement())
  NumCuota          Int
  FechaVencimiento  DateTime
  Monto             Float
  NumeroPoliza      String
  Poliza            Poliza?  @relation(fields: [NumeroPoliza], references: [NumeroPoliza])
  UsuarioId         Int
  Usuario           Usuario?     @relation(fields: [UsuarioId], references: [UsuarioId])
}

model Poliza {
  NumeroPoliza      String  @id
  Vigencia          DateTime
  Telefono          String
  DeAlta            Boolean     @default(true)
  Patente           String   @unique
  Vehiculo          Vehiculo @relation(fields: [Patente], references: [Patente])
  cuotas            Cuota[]
  UsuarioId         Int
  Usuario           Usuario?     @relation(fields: [UsuarioId], references: [UsuarioId])
}

enum TipoUsuario {
  A
  U
}

model Usuario {
  UsuarioId         Int         @id @default(autoincrement())
  Nombre            String
  Contra            String
  Autoridad         TipoUsuario @default(U)
  DeAlta            Boolean     @default(true)
  
  pedidos           PedidoGrua[]
  vehiculos         Vehiculo[]
  polizas           Poliza[]
  cuotas            Cuota[]
}

